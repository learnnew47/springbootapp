pipeline {
    agent any
    stages {
        stage('Build Application') {
            steps {
                sh 'mvn -f pom.xml clean package'
            }
            post {
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.jar'
                }
            }
        }
 
        Stage('Docker Image'){
            steps {
                sh "docker build . -t springboot:${env.BUILD_ID}"
                sh "docker tag springboot:lastest"
            }
        }
 
    }
}
